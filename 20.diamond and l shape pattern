a)	import java.util.Scanner;

public class DiamondPattern {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input the number of rows (half of the diamond)
        System.out.print("Input number of rows (half of the diamond): ");
        int rows = scanner.nextInt();

        // Display upper half of the diamond
        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }

        // Display lower half of the diamond
        for (int i = rows - 1; i >= 1; i--) {
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }

        scanner.close();
    }
}


b)
public class LPattern {
    public static void main(String[] args) {
        int size = 5; // Adjust the size as needed

        // Display the letter L in star pattern
        for (int i = 1; i <= size; i++) {
            System.out.println("*");
        }

        for (int i = 1; i <= 3; i++) {
            System.out.println("*   *");
        }
    }
}
